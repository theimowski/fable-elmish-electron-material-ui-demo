{
  "name": "fable-elmish-electron-demo",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "build": {
    "mac": {
      "compression": "maximum"
    },
    "win": {
      "compression": "maximum"
    }
  },
  "electronWebpack": {
    "title": true,
    "main": {
      "sourceDirectory": "src/Main",
      "webpackConfig": "webpack.additions.main.js"
    },
    "renderer": {
      "sourceDirectory": "src/Renderer",
      "webpackConfig": "webpack.additions.renderer.js"
    }
  },
  "dependencies": {
    "react": "^16.8",
    "react-dom": "^16.8",
    "source-map-support": "^0.5",
    "toastr": "^2.1",
    "typeface-roboto": "^0"
  },
  "devDependencies": {
    "@babel/core": "^7.3",
    "devtron": "^1.4",
    "electron": "^4.0",
    "electron-builder": "^20.38",
    "electron-devtools-installer": "^2.2",
    "electron-webpack": "^2.6",
    "electron-window-state": "^5.0",
    "fable-compiler": "~2.1",
    "fable-loader": "~2.1",
    "node-sass": "^4.11",
    "remotedev": "^0.2",
    "sass-loader": "^7.1",
    "webpack": "^4.29"
  }
}
